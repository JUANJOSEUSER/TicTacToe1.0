<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="601dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="98dp"
                android:layout_height="88dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/businessman_male_man_account_people_profile_person_avatar_user_icon_210812" />

            <TableRow
                android:layout_width="385dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/usuario"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/select_usuario"
                    android:layout_width="227dp"
                    android:layout_height="29dp"
                    android:layout_margin="20dp"
                    android:textSize="21sp" />

            </TableRow>

            <TableRow
                android:layout_width="385dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/gmail"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/select_gmail"
                    android:layout_width="wrap_content"
                    android:layout_height="29dp"
                    android:layout_margin="20dp"
                    android:textSize="21sp" />

            </TableRow>

            <TableRow
                android:layout_width="385dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/telefono"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/select_telefono"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="20dp"
                    android:textSize="21sp" />
            </TableRow>

            <TableRow
                android:layout_width="385dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/fecha"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/select_fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_margin="20dp"
                    android:textSize="21sp" />

            </TableRow>

            <TableRow
                android:layout_width="386dp"
                android:layout_height="58dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="@string/password"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/select_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_margin="20dp"
                    android:inputType="textPassword"
                    android:minHeight="48dp"
                    android:textSize="21sp" />
            </TableRow>

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="cerrar_sesion"
                android:text="Cerrar sesion" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="cambiar_password"
                android:text="Cambiar contraseÃ±a" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="eliminar_cuenta"
                android:text="Eliminar_cuenta" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>